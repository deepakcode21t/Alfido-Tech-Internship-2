/* Task 3 - " Loops and Conditions " */

#include <iostream>
using namespace std;

int main() {
    cout << "Even numbers from 1 to 100:" << endl;

    for (int i = 1; i <= 100; i++) {
        if (i % 2 == 0) {   // Check if number is even
            cout << i << " ";
        }
    }

    cout << endl;
    return 0;
}
